@model BTLVinamilk.Models.DMSUA

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="font-weight:bold">XÓA DANH MỤC</h2>

<h3>Bạn có chắc chắn muốn xóa không?</h3>
<div>
    <h4>DMSUA</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TenDM)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenDM)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AnhDM)
        </dt>

        <dd>
            @{
                string ImagePath = "~/wwwroot/images/" + Model.AnhDM;
            }
            <img src="@Url.Content(ImagePath)" width="300" class="img-thumbnail" />
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            <button type="button" class="btn btn-default">@Html.ActionLink("Hủy", "Index") </button>
        </div>
    }
</div>
@if (ViewBag.Error != null)
{
    <br/>
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}
