@model IEnumerable<BTLVinamilk.Models.DMSUA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-content">
    <div class="page-header">
        <h1 style="font-weight:bold">
            DANH SÁCH DANH MỤC

            <a href="/Admin/DMSUAs/Create" class="btn btn-xs btn-info pull-right">Thêm mới</a>
        </h1>
    </div><!-- /.page-header -->

    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <div class="row">
                <div class="col-xs-12">
                    <table id="simple-table" class="table  table-bordered table-hover" style="font-size:20px">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TenDM)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AnhDM)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenDM)
                                    </td>
                                    <td>
                                        @{
                                            string ImagePath = "~/wwwroot/images/" + item.AnhDM;
                                        }
                                        <img src="@Url.Content(ImagePath)" width="200" class="img-thumbnail" />
                                        <br />
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.IDDM.Trim() }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.IDDM.Trim() }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.IDDM.Trim() })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        

                    </table>
                </div><!-- /.span -->
            </div><!-- /.row -->


            <div id="modal-table" class="modal fade" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header no-padding">
                            <div class="table-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                    <span class="white">&times;</span>
                                </button>
                                Results for "Latest Registered Domains
                            </div>
                        </div>

                        <div class="modal-body no-padding">
                            <table class="table table-striped table-bordered table-hover no-margin-bottom no-border-top">
                                <thead>
                                    <tr>
                                        <th>Domain</th>
                                        <th>Price</th>
                                        <th>Clicks</th>

                                        <th>
                                            <i class="ace-icon fa fa-clock-o bigger-110"></i>
                                            Update
                                        </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
